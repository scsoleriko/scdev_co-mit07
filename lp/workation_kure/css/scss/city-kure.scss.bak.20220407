$accent-color: #008faf;
$accent-gradient: linear-gradient(to left,#07c7b2, #008faf);
$boxshadow-default: 0px 0px 7px rgba(#0d0509, 30%);

@font-face {
	font-family: 'icomoon';
	src: url("../fonts/icomoon.eot?vjh3z5");
	src: url("../fonts/icomoon.eot?vjh3z5#iefix") format("embedded-opentype"), url("../fonts/icomoon.ttf?vjh3z5") format("truetype"), url("../fonts/icomoon.woff?vjh3z5") format("woff"), url("../fonts/icomoon.svg?vjh3z5#icomoon") format("svg");
	font-weight: normal;
	font-style: normal;
}

[class^="icon-"],
[class*=" icon-"] { /* use !important to prevent issues with browser extensions that change fonts */
	font-family: 'icomoon' !important;
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1; /* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.icon-mail:before {
	content: "\e923";
}
.icon-favorite:before {
	content: "\e9d9";
}

main{
	font-family: Meiryo, sans-serif;
	background-color: #f4f4f4;
	color: #424242;
	p{
		letter-spacing: .1em;
		line-height: 2;
	}
	h3{
		letter-spacing: .1em;
	}
}

.bg-gray{
	background-color: #f0f0f0;
}

h2{
	font-size: 3rem;
	font-weight: bold;
}

.ttl-border{
	font-size: 3rem;
	text-align: center;
	font-weight: bold;
	img{
		margin-right: 20px;
		vertical-align: middle;
	}
	&::after{
		content:'';
		display: block;
		background: $accent-gradient;
		width: 70px;
		height: 3px;
		margin: 20px auto 0;
	}
}

.ttl-border-r{
	font-size: 2.4rem;
	font-weight: bold;

	display: flex;
	align-items: center;
	&::after{
		content:'';
		display: block;
		background: $accent-gradient;
		width: 50px;
		height: 3px;
		margin-left: 20px;
	}
}

.font-b{
	font-weight: bold !important;
}

@keyframes fadeIn {
  0% {opacity: 0}
  100% {opacity: 1}
}

#fixed-form{
	padding: 80px 20px;
	background: linear-gradient(to bottom, #008faf, #07c7b2);
	color: #fff;
	font-size: 2rem;
	line-height: 1.1;
	position: fixed;
	right: 0;
	top: 50%;
	transform: translateY(-50%);
	font-weight: bold;
	text-align: center;
	z-index: 100;
	box-shadow: $boxshadow-default;
	i{
		display: inline-block;
		margin-bottom: 10px;
	}
}

@media screen and (max-width: 768px){
	h2{
		font-size: 2.5rem;
		text-align: center;
	}

	#fixed-form{
		width: 100%;
		height: initial;
		padding: 20px 0;
		bottom: 0;
		top: initial;
		left: 0;
		transform: none;
		writing-mode: initial;
		text-orientation: initial;
		text-align: center;
		br{
			display: none;
		}
		i{
			margin-right: 10px;
			margin-bottom: 0;
		}
	}
}

/* ファーストビュー
***************************/
#firstview{
	width: 100%;
	height: 680px;
	.fv-swiper{
		width: 100%;
		height: 100%;
		position: relative;
		z-index: 1;
		img{
			width: 100%;
			height: 100%;
			object-fit: cover;
		}
	}

	position: relative;
	.firstview-text{
		width: 100%;
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translateY(-50%) translateX(-50%);
		z-index: 2;

		font-family : YuMincho, 'Yu Mincho', serif;
		font-weight: 600;
		text-align: center;
		color: #fff;
	}
	h1{
		font-size: 7.2rem;
		letter-spacing: .2em;
		text-shadow: 0px 0px 10px rgba(13, 5, 9, 0.5);
	}
	p{
		margin-top: 35px;
		font-size: 3rem;
		line-height: 2;
		letter-spacing: .1em;
		text-shadow: 0px 0px 10px rgba(13, 5, 9, 0.5);
	}
}

@media screen and (max-width: 768px){
	#firstview{
		height: 480px;
		h1{
			font-size: 4rem;
		}
		p{
			font-size: 1.5rem;
		}
	}
}

/* ページ内スクロール
***************************/
#page-nav{
	display: flex;
	justify-content: center;
	position: relative;
	margin-top: -30px;
	z-index: 2;
	a{
		width: 392px;
		height: 80px;
		font-size:	2rem;
		font-weight: bold;
		line-height: 80px;
		text-align: center;
		background: #fff url(../img/pagenav_arrow.png) no-repeat;
		background-position: center right 20px;
		box-shadow: $boxshadow-default;

		img{
			vertical-align: middle;
			margin-right: 14px;
		}

		& ~ a{
			margin-left: 30px;
		}
	}
}

@media screen and (max-width: 768px){
	#page-nav{
		display: none;
	}
}

/* WORK in 呉市
***************************/
.kure-description{
	margin-top: 76px;
	width: 922px;
	margin-left: auto;
	font-size: 1.6rem;
	padding-bottom: 50px;
}

#kure{
	background: #01b2b0 url(../img/kure_bg.jpg) no-repeat;
	background-position: right center;
	height: 350px;

	.map{
		position: relative;
		margin-top: -178px;
		margin-left: -100px;
	}

	position: relative;
	.kure-text{
		width: 100%;
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translateY(-50%) translateX(-50%);

