		}
	}

	#kure{
		height: auto;
		padding: 30px 0;
		background-size: cover;

		.map{
			display: none;
		}

		.kure-text{
			width: calc(100% - 40px);
			margin: 0 auto;
			position: initial;
			top: 0;
			left: 0;
			transform: none;
		}
	}
}

/* 呉市の魅力
***************************/
#appeal{
	background: #fff;
	padding-bottom: 40px;

	h2{
		padding-right: 30px;
		text-align: right;
	}

	.appeal-nav{
		padding: 40px;
		width: 730px;
		height: 260px;
		background: linear-gradient(to right, #00b2b0 , #71ccaa);
		color: #fff;
		font-weight: bold;
		text-shadow: 0px 0px 3px rgba(13, 5, 9, 0.5);
		& > div{
			display: flex;
			align-items: center;
		}
		p{
			margin-right: 30px;
			font-size: 2.2rem;
		}
		ul{
			li{
				float: left;
				cursor: pointer;
				& ~ li::before{
					content:'｜';
				}
				&.current{
					position: relative;
					&::after{
						content:'';
						position: absolute;
						left: 50%;
						bottom: -10px;
						transform: translateX(-50%);
						width: 33px;
						height: 1px;
						background-color: #fff;
					}
				}
			}
		}
	}

	.appeal-area{
		position: relative;
		margin-top: -160px;
		padding-left: 70px;
		z-index: 2;
		height: 400px;
	}

	.appeal-areaWrap{
		display: none;
		&.current{
			display: block;
			animation: 1s fadeIn;
			animation-iteration-count: 1;
		}
	}

	article{
		position: absolute;
		display: flex;

		.image{
			width: 746px;
			img{
				width: 100%;
			}
		}

		.description{
			background-color: #fff;
			margin-left: 26px;
			width: calc(100% - 746px);

			h3{
				border-top: dashed 1px #d1d1d1;
				border-bottom: dashed 1px #d1d1d1;
				text-align: center;
				font-size: 2rem;
				padding: 12px 0;
			}
			p{
				margin-top: 40px;
				font-size: 1.6rem;
			}
			.more{
				margin-top: 30px;
				text-align: right;
				a{
					margin-left: auto;
					font-weight: bold;
				}
			}
		}

		.appeal-nav2{
			margin-top: 40px;
			display: flex;
			align-items: center;
			justify-content: space-between;
			border-top: dashed 1px #d1d1d1;
			border-bottom: dashed 1px #d1d1d1;
			padding: 12px 0;
			font-size: 1.6rem;
			font-weight: bold;
			li{
				cursor: pointer;
				&.prev::before{
					content: url(../img/appeal-nav2_arrow-prev.png);
					margin-right: 20px;
				}
				&.next::after{
					content: url(../img/appeal-nav2_arrow-next.png);
					margin-left: 20px;
				}
			}
		}
	}
}

@media screen and (max-width: 768px){
	#appeal{
		h2{
			text-align: center;
			padding-right: 0;
			img{
				width: 60%;
			}
		}

		.appeal-nav{
			display: none;
		}

		.appeal-areaWrap{
			display: block !important;
			& ~ .appeal-areaWrap{
				margin-top: 60px;
			}
		}
		
		.appeal-area{
			margin-top: 30px;
			height: auto;
			padding-left: 0;
		}

		article{
			position: initial;
			flex-flow: wrap;
			.image{
				width: 100%;
			}

			.description{
				width: 100%;
				margin-left: 0;
				margin-top: 15px;
			}

			.appeal-nav2{
				display: none;
			}
		}
	}
}

